<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
    
    <servlet>
    	<servlet-name>ForwardServlet</servlet-name>
    	<servlet-class>org.sample.redirect.simple.ForwardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>ForwardServlet</servlet-name>
    	<url-pattern>/forward/*</url-pattern>
    </servlet-mapping>
    
    <filter>
    	<filter-name>logginFilter</filter-name>
    	<filter-class>org.sample.redirect.simple.LoggingFilter</filter-class>
    </filter>
    <filter-mapping>
    	<filter-name>logginFilter</filter-name>
		<url-pattern>/*</url-pattern>    	
    </filter-mapping>
    
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/error/notFound.html</location>
	</error-page>
</web-app>