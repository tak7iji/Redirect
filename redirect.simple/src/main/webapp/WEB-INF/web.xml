<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app> 
    <filter>
    	<filter-name>logginFilter</filter-name>
    	<filter-class>org.sample.redirect.simple.LoggingFilter</filter-class>
    </filter>
    <filter>
    	<filter-name>forwardFilter</filter-name>
    	<filter-class>org.sample.redirect.simple.ForwardFilter</filter-class>
    </filter>

    <filter-mapping>
    	<filter-name>logginFilter</filter-name>
		<url-pattern>/*</url-pattern>    	
    </filter-mapping>
    
    <filter-mapping>
    	<filter-name>forwardFilter</filter-name>
		<url-pattern>/filter/*</url-pattern>    	
    </filter-mapping>
    
    <servlet>
    	<servlet-name>ForwardServlet</servlet-name>
    	<servlet-class>org.sample.redirect.simple.ForwardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>ForwardServlet</servlet-name>
    	<url-pattern>/servlet/*</url-pattern>
    </servlet-mapping>
    
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/error/notFound.html</location>
	</error-page>
</web-app>